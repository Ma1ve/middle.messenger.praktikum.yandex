{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "strictNullChecks": true,
    "sourceMap": true,

    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "dist", "server.js"],
  "include": ["src/**/*.ts"]
}
